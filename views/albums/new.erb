<h1>Album details:</h1>

<form action="/rubyrecords/albums" method="POST">
  <label for="title-field">Title:</label>
    <input type="text" name="title" id="title-field"/>
<br>
  <label for="artist-field">Artist:</label>
    <input type="text" name="artist" id="artist-field"/>
<br>
  <label for="genre-field">Genre:</label>
    <input type="text" name="genre" id="genre-field">
<br>
  <label for="artwork-field">Artwork:</label>
    <input type="text" name="artwork" id="artwork-field">
<br>
  <label for="sold-field">Sold:</label>
    <input type="number" name="sold" id="sold-field">
<br>
  <label for="current-stock-field">Current Stock:</label>
    <input type="number" name="current stock" id="current-stock-field">
<br>
  <label for="target-stock-field">Target Stock:</label>
    <input type="number" name="target stock" id="target-stock-field">
<br>
  <label for="buy-price-field">Buy Price:</label>
    <input type="number" name="buy price" id="buy-price-field">
<br>
  <label for="sell-price-field">Sell Price:</label>
    <input type="number" name="sell price" id="sell-price-field">
<br>
  <input type="submit" value="Update"/>
</form
